<h1 align="center">Listing All Categories</h1>
<div align="center">
    <%= will_paginate %>
</div>
<% @categories.each do |c| %>
  <ul class="listing">
    <div class="row center">
      <div class="well col-md-4 col-md-offset-4">
        <li class="article-title">
          <%= link_to "#{c.name}", category_path(c)%>
        </li>
        <li>
          <small><%= "This category has " + c.articles.count.to_s + " articles." %></small>
          <%# <%= pluralize(category.articles.count, "articles") %>
        </li>
      </div>
    </div>
  </ul>
<% end %>
<div align="center">
    <%= will_paginate %>
</div>