<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
    <%= will_paginate %>
</div>
    <% @users.each do |user| %>
        <ul class="listing center">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li><%= link_to gravatar_for(user, size: 50), user_path(user) %>
                    </li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li><small>
                        <%= user.email %>
                    </small></li>
                    <li><small>
                        <%= pluralize(user.articles.count, "post") if user.articles %>
                    </small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete user", user_path(user), method: :delete,
                            data: {confirm: "Are you sure you want to delete this user?"} %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
<div align="center">
    <%= will_paginate %>
</div>