<h1 align="center">All Alpha Bloggers</h1>
    <% @users.each do |user| %>
        <ul class="listing center">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li><%= link_to gravatar_for(user, size: 50), user_path(user) %>
                    </li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li><small>
                        <%= user.email %>
                    </small></li>
                    <li><small>
                        <%= pluralize(user.articles.count, "post") if user.articles %>
                    </small></li>
                </div>
            </div>
        </ul>
    <% end %>
